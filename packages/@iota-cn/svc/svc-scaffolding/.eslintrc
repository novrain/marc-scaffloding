{
  "parser": "babel-eslint",
  "extends": "standard",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true
  },//0:off 1:warn 2:error
  "rules": {
    "func-style": [
      1,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "indent": 0,
    "quotes": 0,
    "semi": 0,
    "no-multiple-empty-lines": 0,
    "spaced-comment": 0,
    "space-before-function-paren": 0
  }
}