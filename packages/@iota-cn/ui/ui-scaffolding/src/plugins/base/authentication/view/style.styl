@import '../../../../styles/imports';

.ii-auth-form {
    width: 350px;
    padding: 30px;
    position: relative;
    left: 450px;
    background-color: white;

    .hint {
        line-height: 20px !important
    }

    .hint-more {
        line-height: 20px !important
        color $ii-gray-300
        font-size: 12px
    }

    .mark {
        position: absolute;
        width: 19px;
        height: 3px;
        background-color: $ii-primary-color;
        border-radius: 2px;
    }

    .error-mark {
        background-color: $error-color;
    }


    .float-right {
        float: right;
    }

    .button {
        width: 100%;
    }

    .quick-signin {
        width: 100%;
        text-align: center;
        display: inline-block;
    }
}